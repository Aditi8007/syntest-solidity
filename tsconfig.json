{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "declaration": true,
    "outDir": "./dist",
    "allowJs": true,
    "lib": [
      "dom",
      "es7",
      "scripthost",
      "es2015.collection"
    ]
  },
  "include": [
    "lib/**/*",
    "plugins/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
